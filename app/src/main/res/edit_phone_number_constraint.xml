<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/edit_phone_number">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit contact"
        android:gravity="center"
        android:id="@+id/edit_phone_number_title"
        android:textSize="24sp"
        android:layout_marginTop="25dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_phone_number_title"
        android:layout_marginTop="40dp"
        android:id="@+id/edit_phone_number_photo_parent"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/edit_phone_number_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/edit_phone_number_photo_parent">

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/left_guideline"
            app:layout_constraintGuide_percent=".15"
            android:orientation="vertical"/>

        <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/right_guideline"
            app:layout_constraintGuide_percent=".85"
            android:orientation="vertical"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/edit_name_parent"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Contact name:"
                android:textSize="15sp"
                android:id="@+id/edit_name_label"
                />

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/edit_name"
                android:inputType="text"
                android:textSize="15sp"
                app:backgroundTint="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/edit_phone_parent"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/edit_name_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone number:"
                android:textSize="15sp"
                android:id="@+id/edit_phone_label"
                />

            <android.support.v7.widget.AppCompatEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/edit_phone"
                android:inputType="phone"
                android:textSize="15sp"
                app:backgroundTint="@color/gray"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:id="@+id/edit_type_parent"
            app:layout_constraintLeft_toLeftOf="@+id/left_guideline"
            app:layout_constraintRight_toRightOf="@+id/right_guideline"
            app:layout_constraintTop_toBottomOf="@id/edit_phone_parent"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Phone type:"
                android:textSize="15sp"
                android:id="@+id/edit_type_label"
                />

            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phone_types_spinner">

            </android.support.v7.widget.AppCompatSpinner>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        style="?android:attr/buttonBarStyle"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Cancel"
            android:drawableStart="@drawable/baseline_cancel_white_24"
            android:padding="16dp"
            android:background="@color/colorAccent"
            android:textColor="@color/textOnDark"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/edit_phone_number_cancel"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="Ok"
            android:drawableStart="@drawable/baseline_check_circle_white_24"
            android:padding="16dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/textOnDark"
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/edit_phone_number_ok"
            />
    </LinearLayout>

</RelativeLayout>