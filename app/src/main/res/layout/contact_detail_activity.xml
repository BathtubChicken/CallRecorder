<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/textOnDark"
        android:id="@+id/toolbar_detail"
        android:elevation="2dp"
        android:theme="@style/toolbar_theme"
        app:titleTextAppearance="@style/toolbar_font"
        >

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/close"
            android:layout_marginEnd="15dp"
            android:id="@+id/close_select_mode"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/actionbar_select_title"
            android:layout_marginStart="30dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            style="@style/toolbar_font"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_export"
            android:background="@android:color/transparent"
            android:id="@+id/actionbar_select_export"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:visibility="gone"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_delete"
            android:background="@android:color/transparent"
            android:id="@+id/actionbar_select_delete"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/select_all"
            android:background="@android:color/transparent"
            android:id="@+id/actionbar_select_all"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"
            android:visibility="gone"
            />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_more_vert_white_24"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            android:id="@+id/phone_number_detail_menu"
            android:layout_gravity="end"
           />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/edit"
            android:background="@android:color/transparent"
            android:id="@+id/edit_contact"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/call"
            android:background="@android:color/transparent"
            android:id="@+id/call_contact"
            android:layout_gravity="end"
            android:layout_marginEnd="15dp"/>

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/filler">
    </TextView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filler"
        android:id="@+id/contact_detail_fragment_container">

    </FrameLayout>

</RelativeLayout>