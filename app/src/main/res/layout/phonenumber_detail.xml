<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_height="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@color/textOnDark"
        android:id="@+id/toolbar_detail"
        android:elevation="2dp"
        android:theme="@style/toolbar_theme"
        app:titleTextAppearance="@style/toolbar_font"
        >

    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:id="@+id/filler">
    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_below="@id/filler"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_photo_detail"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"
       />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/contact_photo_detail"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/phone_number_detail"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/contact_photo_detail"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:id="@+id/phone_type_detail"
            android:layout_below="@id/phone_number_detail"
            />

    </RelativeLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:weightSum="2"
       android:id="@+id/sync_contact"
       android:visibility="gone"
       android:layout_below="@+id/toolbar_detail"
       >

       <TextView
           android:layout_width="0dp"
           android:layout_height="48dp"
           android:layout_weight="1"
           android:id="@+id/sync_new_contact"
           android:gravity="center"
           android:layout_gravity="top"
           android:background="@color/colorAccent"
           android:text="Make new contact"/>

       <TextView
           android:layout_width="0dp"
           android:layout_height="48dp"
           android:layout_weight="1"
           android:id="@+id/sync_assign_existing"
           android:gravity="center"
           android:layout_gravity="top"
           android:background="@color/complementaryAccent"
           android:text="Assign to existing number"/>
   </LinearLayout>

</RelativeLayout>