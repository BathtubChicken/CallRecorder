<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/contact_photo_detail"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFFFF"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contact_photo_detail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/phone_number_detail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/contact_photo_detail"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:id="@+id/phone_type_detail"
        android:layout_below="@id/phone_number_detail"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recording_status"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/phone_type_detail"
        android:layout_toEndOf="@+id/contact_photo_detail"/>

    <!-- Marginile setate aici trebuie sÄƒ fie identice cu cele din phoneNumberDetail::calculateCardViewDimensions().-->
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:id="@+id/recordings"
        android:layout_marginTop="30dp"
        android:layout_below="@id/recording_status"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        />

</RelativeLayout>