<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >

        <android.support.v7.widget.Toolbar
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:id="@+id/toolbar_main"
            android:elevation="2dp"
            >

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:layout_marginEnd="15dp"
                android:id="@+id/close_select_mode"
                android:layout_gravity="start"
                android:background="@android:color/transparent"
                android:visibility="gone"
                />

            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="start"
                android:background="@drawable/baseline_menu_white_24"
                android:id="@+id/hamburger"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/actionbar_select_title"
                android:layout_gravity="center"
                style="@style/toolbar_font"
                android:textColor="@color/textOnDark"/>

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_export"
                android:background="@android:color/transparent"
                android:id="@+id/actionbar_select_export"
                android:layout_gravity="end"
                android:layout_marginEnd="20dp"
                android:visibility="gone"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/select_delete"
                android:background="@android:color/transparent"
                android:id="@+id/actionbar_select_delete"
                android:layout_gravity="end"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_more_vert_white_24"
                android:layout_marginEnd="10dp"
                android:background="@android:color/transparent"
                android:id="@+id/phone_number_detail_menu"
                android:layout_gravity="end"
                android:visibility="gone"
                />

        </android.support.v7.widget.Toolbar>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:baselineAligned="false"
            >

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/contacts_list_fragment_container">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/no_content"
                    android:text="There are currently no contacts."
                    android:textAlignment="center"
                    android:layout_marginTop="?attr/actionBarSize"
                    android:paddingTop="25dp"
                    />

                <!-- în loc de separator, pentru că în kitkat se suprapune cu actionbarul -->
                <LinearLayout
                    android:layout_width="0.001dp"
                    android:layout_height="match_parent"
                    android:background="#60777777"
                    android:layout_gravity="end"
                    android:layout_marginTop="?attr/actionBarSize"
                    />

            </FrameLayout>

            <!-- Are nevoie de marginTop pentru că altfel începe chiar de sus, suprapunîndu-se cu toolbarul.-->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/contact_detail_fragment_container"
                android:layout_marginTop="?attr/actionBarSize">
            </FrameLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/add_numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:src="@drawable/ic_plus"
            android:layout_margin="16dp" />
    </FrameLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:menu="@menu/drawer_view"
        app:headerLayout="@layout/navdraw_header"
        android:id="@+id/navigation_view">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>